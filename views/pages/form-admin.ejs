<div class="container">
    <div class="card">
        <div class="card-header  bg-warning">
            <h4>Form Admin</h4>
        </div>
        <div class="card-body">
            <form action="<%= targetRoute %>" method="post">
                Nama Admin
                <input type="text" name="nama_admin" id="nama_admin" class="form-control" value="<%= nama_admin %>" required />

                Username
                <input type="text" name="username" id="username" class="form-control" value="<%= username %>" required />

                Password
                <input type="password" name="password" value="<%= deskripsi(password) %>" id="password" class="form-control mb-2"
                    required>
                
                <input type="checkbox" onclick="hidePW()"> Show Password <br> <br>

                <button type="submit" class="btn btn-success mt-2">
                    Simpan
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function hidePW() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>