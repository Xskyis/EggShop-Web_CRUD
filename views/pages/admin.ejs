<div class="container">
    <h4 class="fw-bold">Data Admin</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(Admin=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-success">Nama Admin</small> <br />
                        <%= Admin.nama_admin %>
                    </div>

                    <div class="col-lg-2">
                        <small class="text-success">Username</small> <br />
                        <%= Admin.username %>

                    </div>

                    <div class="col-lg-5">
                        <small class="text-success">Password</small> <br />
                        <%= Admin.password %>

                    </div>

                    <div class="col-lg-2">
                        <small class="text-success">Action</small> <br />

                        <!-- button edit -->
                        <a href="/admin/edit/<%= Admin.id %>">
                            <button class="btn btn-sm btn-warning fw-semibold">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/admin/delete/<%= Admin.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger fw-semibold">
                                Hapus
                            </button>
                        </a>

                    </div> 
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/admin/add">
        <button class="btn btn-md btn-success">
            Tambah Data
        </button>
    </a>

</div>